<script>
function Tinhdiem(){
    var a = parseInt(document.getElementById("Hoa").value);
    var b = parseInt(document.getElementById("Ly").value);
    var c = parseInt(document.getElementById("Sinh").value);

    var Avg = (a + b + c )/3;
    document.write("<h1>KQ</h1>");
}
</script>

